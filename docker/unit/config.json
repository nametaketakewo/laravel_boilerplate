{
    "listeners": {
        "*:80": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "uri": "~/\\.(?!well-known).*"
            },
            "action": {
                "return": 404
            }
        },
        {
            "match": {
                "uri": "!/index.php"
            },
            "action": {
                "share": "/var/www/html/public$uri",
                "fallback": {
                    "pass": "applications/laravel",
                    "response_headers": {
                        "X-Frame-Options": "SAMEORIGIN",
                        "X-Content-Type-Options": "nosniff",
                        "X-XSS-Protection": "1; mode=block",
                        "X-Powered-By": null
                    }
                },
                "response_headers": {
                    "X-Frame-Options": "SAMEORIGIN",
                    "X-Content-Type-Options": "nosniff",
                    "X-XSS-Protection": "1; mode=block",
                    "Content-Type": "${response_header_content_type}; charset=utf-8"
                }
            }
        }
    ],
    "applications": {
        "laravel": {
            "type": "php",
            "root": "/var/www/html/public/",
            "script": "index.php",
            "limits": {
                "requests": 100
            },
            "processes": {
                "max": 10,
                "spare": 5
            }
        }
    },
    "settings": {
        "http": {
            "server_version": false
        }
    },
    "access_log": {
        "if": "`${/^\\/(favicon.ico|robots.txt)\\/?$/.test(uri) || uri == '/up' && /^curl/.test(vars.header_user_agent) ? false : true}`",
        "path": "/dev/stdout"
    }
}
