<?xml version="1.0"?>
<ruleset>
    <file>app/</file>
    <file>bootstrap/app.php</file>
    <file>bootstrap/providers.php</file>
    <file>config/</file>
    <file>database/</file>
    <file>routes/</file>
    <file>tests/</file>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="cache" value="storage/framework/cache/phpcs.cache"/>
    <arg name="extensions" value="inc,php"/>
    <arg value="sp"/>

    <rule ref="PSR12">
        <exclude name="PSR12.Classes.ClassInstantiation.MissingParentheses"/>
        <exclude name="PSR12.ControlStructures.ControlStructureSpacing"/>
        <exclude name="PSR12.Operators.OperatorSpacing"/>
        <exclude name="PSR12.Traits.UseDeclaration.MultipleImport"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.Multiple"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.ScopeMissing"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.SpacingAfterType"/>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140"/>
            <property name="absoluteLineLimit" value="160"/>
        </properties>
    </rule>
    <rule ref="Generic.Files.LineLength.TooLong">
        <exclude-pattern>config/</exclude-pattern>
        <exclude-pattern>database/migrations/</exclude-pattern>
        <exclude-pattern>database/seeders/CategoriesTableSeeder.php</exclude-pattern>
    </rule>
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/</exclude-pattern>
    </rule>
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations/</exclude-pattern>
    </rule>
    <rule ref="PSR12.Operators.OperatorSpacing.NoSpaceBefore">
        <exclude-pattern>config/</exclude-pattern>
    </rule>
    <rule ref="PSR12.Operators.OperatorSpacing.NoSpaceAfter">
        <exclude-pattern>config/</exclude-pattern>
    </rule>
</ruleset>
